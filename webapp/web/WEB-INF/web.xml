<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    
    <servlet>
        <servlet-name>ReportGenerator</servlet-name>
        <servlet-class>reports.ReportGeneratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportGenerator</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>Login</servlet-name>
    <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <mime-mapping>
        <extension>xls</extension>
        <mime-type>application/vnd.ms-excel</mime-type>
    </mime-mapping>
    
    
    <servlet>
        <servlet-name>MailSender</servlet-name>
        <servlet-class>mail.MailSenderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MailSender</servlet-name>
        <url-pattern>/mail</url-pattern>
    </servlet-mapping>
    
</web-app>